{"$schema":"https://json.schemastore.org/tsconfig.json",

	"compilerOptions": {
		"target":           "ESNext",
		"module":           "ESNext",
		"moduleResolution": "node",

		"resolveJsonModule": true,
		"isolatedModules":   true,

		"types": [
			"vite/client"
		]
	},

	"include": [
		"./**/*.d.ts",
		"./astro.config.ts",
		"./src/**/*.astro",
		"./src/**/*.cjs",
		"./src/**/*.js",
		"./src/**/*.jsx",
		"./src/**/*.md",
		"./src/**/*.mdx",
		"./src/**/*.mjs",
		"./src/**/*.svelte",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.vue"
	],

	"exclude": [
		"./src/Templates",
		"node_modules"
	]

}
